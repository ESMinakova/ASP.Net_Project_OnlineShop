@model UserSignInInfo

<div class="col-4">
    <div class="justify-content-center">
        <h3>Вход</h3>
    </div>
    <form class="row-4" method="post">
        <div class="validation" asp-validation-summary="All">   </div>
        <div><input type ="hidden" name="returnUrl" value="@Model.ReturnUrl" /> </div>
        <div class="mb-3">
            <div>
                <label asp-for="Login">Логин</label><br />
                <input type="email" asp-for="Login" class="form-control" placeholder="Email"/>
                <span asp-validation-for="Login" style="color:red"/>
            </div>            
        </div>
        <div class="mb-3">
            <div>
                <label asp-for="Password">Пароль</label><br />
                <input type="password" asp-for="Password" class="form-control" placeholder="Пароль" />
                <span asp-validation-for="Password" style="color:red"/>
            </div>            
        </div>
        <div class="mb-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsMemorize" value="true">
                <label class="form-check-label" for="gridCheck">
                    Запомнить меня?
                </label>
            </div>
        </div>        
        <div class="mb-3">
            <button type="submit" class="btn btn-primary" asp-area="" asp-controller="Account" asp-action="Login">Войти</button>
        </div>
        <div>
            <a asp-controller="Account" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">Регистрация нового пользователя</a>
        </div>
    </form>
</div>
    

