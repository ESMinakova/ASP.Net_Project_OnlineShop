@model ChangePassword

<div class="col-4">
    <div class="justify-content-center">
        <h3>Регистрация</h3>
    </div>
    <form class="row-4" method="post">
        <div class="validation" asp-validation-summary="All">   </div>
        <div class="mb-3">
            <div>
                <input type="hidden" asp-for="Login" value="@Model.Login" />
            </div>
        </div>
        <div class="mb-3">
            <div>
                <label asp-for="Password">Пароль</label><br />
                <input type="password" asp-for="Password" class="form-control" placeholder="Пароль" />
                <span asp-validation-for="Password" style="color:red" />
            </div>
        </div>
        <div class="mb-3">
            <div>
                <label asp-for="ConfirmPassword">Подвердите пароль</label><br />
                <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Подвердите пароль" />
                <span asp-validation-for="ConfirmPassword" style="color:red" />
            </div>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary" asp-area="Admin" asp-controller="Users" asp-action="ChangePassword" asp-route-login="@Model.Login">Заменить пароль</button>
        </div>
    </form>
</div>