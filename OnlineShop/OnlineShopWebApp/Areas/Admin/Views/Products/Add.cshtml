@model CreateProductViewModel

<div class="col-6">
    <div class="justify-content-center">
        <img class="card-img-top" src="~/Content/coverDish.jpeg" )>
    </div>
    <form class="row-4" method="post" enctype="multipart/form-data">
        <div class="validation" asp-validation-summary="All">   </div>
        <div class="mb-3">
            <label asp-for="ImageFiles">Выберите файлы для загрузки изображения блюда</label>
            <input type="file" name="ImageFiles" multiple class="form-control" asp-for="ImageFiles" /><br>
        </div>
        <div class="mb-3">
            <label asp-for="Name">Наименование блюда</label><br />
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" style="color:red" />
        </div>
        <div class="mb-3">
            <label asp-for="Category">Категория блюда</label><br />
            <select asp-for="@Model.Category"
                    asp-items="Html.GetEnumSelectList<CategoryViewModel>()"
                    class="form-control">
            </select>
        </div>
        <div class="mb-3">
            <label asp-for="Cost">Стоимость, руб</label><br />
            <input type="number" asp-for="Cost" class="form-control" />
            <span asp-validation-for="Cost" style="color:red" />
        </div>
        <div class="mb-3">
            <label asp-for="Description">Описание блюда</label><br />
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" style="color:red" />
        </div>
        <div class="mb-3">
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary" asp-area="Admin" asp-controller="Products" asp-action="Add">Подтвердить</button>
        </div>
    </form>
</div>